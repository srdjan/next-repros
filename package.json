{
  "name": "next-repros",
  "version": "1.1.3",
  "description": "Simple boilerplate to kickoff Next.JS PWA projects, includes firebase authentication",
  "main": "pages/index.js",
  "repository": {
    "url": "https://github.com/srdjan/next-reporos.git"
  },
  "license": "MIT",
  "scripts": {
    "dev": "node server.js",
    "build:next": "chmod -R u+x node_modules/next/dist/bin && next build",
    "build": "npm run build:next",
    "start:next": "next start",
    "start": "NODE_ENV=production node server.js",
    "deploy": "npm version patch && now --name=klinchit-mvp --public",
    "format": "prettier-standard 'utils/*.js' 'lib/*.js' 'pages/*.js' 'components/*.js'"
  },
  "dependencies": {
    "@firebase/app": "0.5.3",
    "@firebase/auth": "0.13.4",
    "@firebase/firestore": "1.10.0",
    "@firebase/storage": "0.3.25",
    "classnames": "2.2.6",
    "dotenv": "8.2.0",
    "ethers": "^4.0.44",
    "formik": "2.1.3",
    "micro": "9.3.4",
    "module-alias": "2.2.2",
    "next": "9.2.1",
    "next-offline": "4.0.6",
    "preact": "10.2.1",
    "preact-render-to-string": "5.1.4",
    "qrcode.react": "1.0.0",
    "rc-tooltip": "4.0.0-alpha.3",
    "react-notify-toast": "0.5.1",
    "storeon": "0.9.8",
    "stripe": "8.9.0"
  },
  "devDependencies": {
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "@zeit/next-bundle-analyzer": "0.1.2",
    "husky": "3.1.0",
    "prettier": "1.19.1",
    "prettier-standard": "16.0.0",
    "pretty-quick": "2.0.1",
    "webpack-cli": "3.3.10"
  },
  "keywords": [
    "nextjs",
    "pwa",
    "react"
  ],
  "author": "djidja8"
}
